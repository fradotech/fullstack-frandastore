<h5>
    <center>Daftar Reseller Franda Store</center>
</h5>
<br>
<% if (message) {%>
    <div class="alert <%= messageClass %>" role="alert">
        <%= message %>
    </div>
    <% } %>

        <div class="d-flex justify-content-center">
            <div class="card" style="width: 300px; height: 320; background-color: white;">
                <div class="card-body">
                    <form method="POST" action="/register">
                        <div class="form-group">
                            <label>Nama</label>
                            <input type="name" class="form-control" id="name" name="name" placeholder="Nama" required>
                        </div>
                        <div class="form-group">
                            <label>Nomor HP</label>
                            <input type="phone" class="form-control" id="phone" name="phone" placeholder="Nomor HP"
                                required>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email"
                                required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Password" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" style="width: 260px;">Daftar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>