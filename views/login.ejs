<h5><center>Login Reseller Franda Store</center></h5>
<br>
<% if (message) {%> 
    <div class="alert <%= messageClass %>" role="alert">
        <%= message %> 
    </div>
<% } %> 
<div class="d-flex justify-content-center">
    <div class="card" style="width: 400px; height: 320; background-color: white;">
        <div class="card-body">
            <form method="POST" action="/login">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary container">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
<p><center>Belum jadi Reseller? <a href="/register">Daftar</a></center></p>